{
  "extends": ["config:base", "packages:eslint", "group:definitelyTyped"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
      "groupName": "Manual managed deps",
      "groupSlug": "manual-managed-deps",
      "packageNames": [
        "@types/openpgp",
        "asn1.js",
        "bn.js",
        "inherits",
        "minimalistic-assert",
        "openpgp",
        "safer-buffer"
      ]
    },
    {
      "groupName": "Test deps",
      "groupSlug": "test-deps",
      "packageNames": ["@types/jest", "jest", "ts-jest"]
    },
    {
      "groupName": "Semantic Release deps",
      "groupSlug": "semantic-release-deps",
      "packageNames": [
        "commitizen",
        "cz-conventional-changelog",
        "semantic-release"
      ],
      "packagePatterns": ["^@semantic-release/"]
    }
  ],
  "timezone": "Asia/Tokyo",
  "vulnerabilityAlerts": {
    "labels": ["security"]
  }
}
