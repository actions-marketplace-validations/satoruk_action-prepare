{
  "extends": ["config:base", "packages:eslint", "group:definitelyTyped"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  },
  "packageRules": [
    {
      "automerge": true,
      "groupName": "Test deps",
      "groupSlug": "test-deps",
      "packageNames": ["@types/jest", "jest", "ts-jest"]
    },
    {
      "groupName": "Semantic Release deps",
      "groupSlug": "semantic-release-deps",
      "packageNames": [
        "commitizen",
        "cz-conventional-changelog",
        "semantic-release"
      ],
      "packagePatterns": ["^@semantic-release/"]
    }
  ],
  "schedule": ["at 5:00 pm on Fri", "at 5:00 pm on Tues", "every weekend"],
  "timezone": "Asia/Tokyo",
  "vulnerabilityAlerts": {
    "labels": ["security"]
  }
}
