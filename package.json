{
  "name": "action-prepare",
  "version": "2.0.1",
  "private": true,
  "license": "LGPL-3.0",
  "homepage": "https://github.com/satoruk/action-prepare",
  "scripts": {
    "build": "yarn lint && yarn build:ncc && yarn copy",
    "build:ncc": "ncc build --minify --source-map src/index.ts",
    "clean": "yarn clean:report && yarn clean:build",
    "clean:build": "del dist",
    "clean:report": "del coverage '*.log'",
    "commit": "git-cz",
    "copy": "cpx -C \"node_modules/{asn1.js,bn.js,inherits,safer-buffer,minimalistic-assert}/**/*\" dist/node_modules",
    "format": "eslint --fix . && prettier --write .",
    "lint": "yarn lint:es && yarn lint:spell '**/*.*'",
    "lint:es": "tsc --noEmit && eslint",
    "lint:spell": "cspell",
    "prepack": "yarn prepare",
    "prepare": "yarn clean && yarn build",
    "release": "semantic-release",
    "test": "jest",
    "test:inspect": "npx --node-arg --inspect-brk jest --runInBand --coverage=false",
    "update:readme": "f(){ replace-in-file \"/(?<=satoruk/action-prepare@v)\\d+(\\.\\d+){2}/g\" $1 README.md --isRegex; }; f"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "@vercel/ncc": "0.25.1",
    "ajv": "6.12.6",
    "js-yaml": "3.14.0",
    "lodash": "4.17.20",
    "openpgp": "4.10.8",
    "typescript": "4.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@types/jest": "26.0.16",
    "@types/js-yaml": "3.12.5",
    "@types/lodash": "4.14.165",
    "@types/node": "14.14.10",
    "@types/openpgp": "4.4.14",
    "@types/rimraf": "3.0.0",
    "commitizen": "4.2.2",
    "cpx": "1.5.0",
    "cspell": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.2.0",
    "eslint-plugin-promise": "4.2.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "replace-in-file": "6.1.0",
    "rimraf": "3.0.2",
    "semantic-release": "17.3.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "tag": "feat",
              "release": "minor"
            },
            {
              "tag": "fix",
              "release": "minor"
            },
            {
              "tag": "docs",
              "release": false
            },
            {
              "tag": "style",
              "release": "patch"
            },
            {
              "tag": "refactor",
              "release": "patch"
            },
            {
              "tag": "perf",
              "release": "patch"
            },
            {
              "tag": "test",
              "release": false
            },
            {
              "tag": "build",
              "release": "patch"
            },
            {
              "tag": "ci",
              "release": false
            },
            {
              "tag": "chore",
              "scope": "deps",
              "release": "patch"
            },
            {
              "tag": "chore",
              "scope": "deps-dev",
              "release": false
            },
            {
              "tag": "chore",
              "release": false
            },
            {
              "tag": "chore",
              "release": false
            },
            {
              "tag": "perf",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build && yarn update:readme ${nextRelease.version}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "dist/**",
            "package.json"
          ]
        }
      ]
    ]
  }
}
